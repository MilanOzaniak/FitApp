<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="FitApp.Views.RegistrationBMIView"
             BackgroundColor="#FF2B2B2B">



    <StackLayout>
        <Label Text="Registration"
               VerticalOptions="Start"
               HorizontalOptions="Center"
               FontSize="22"
               TextColor="White"   />

        <Label Text="Step 3/4"
               VerticalOptions="Start"
               HorizontalOptions="Center"
               Margin="0,0,0,0"
               FontAttributes="Bold"
               FontSize="15"
               TextColor="White"/>


        <Label Text="How tall are you ?"
               TextColor="White"
               FontSize="22"
               Padding="0,100,0,0"
               HorizontalTextAlignment="Center"/>
        
        <Label Text="{Binding Source={x:Reference HeightSlider},
                    Path=Value,
                    StringFormat='{0:F0} cm'}"
               
               TextColor="White"
               HorizontalTextAlignment="Center"/>
        
        <Slider x:Name="HeightSlider"
                MaximumTrackColor="White"
                ThumbColor="White"
                Margin="20,0,20,0"
                Maximum="220"
                Minimum="40"
                Value="{Binding Height}"/>

        <Label Text="How much do you weight ?"
               TextColor="White"
               FontSize="22"
               HorizontalTextAlignment="Center"/>
        
        <Label Text="{Binding Source={x:Reference WeightSlider},
                    Path=Value,
                    StringFormat='{0:F0} kg'}"
               TextColor="White"
               HorizontalTextAlignment="Center"/>
        
        <Slider x:Name="WeightSlider"
                MaximumTrackColor="White"
                ThumbColor="White"
                Margin="20,0,20,0"
                Maximum="300"
                Minimum="40"
                Value="{Binding Weight}"/>

        <Label Text="Your Bmi is"
               FontSize="16"
               TextColor="White"
               HorizontalTextAlignment="Center"
               Padding="0,20,0,0"/>
        
        <Label Text="{Binding Bmi}"
               HorizontalTextAlignment="Center"
               TextColor="White"
               FontSize="48"/>
        
        <Button Text="Next Step"
                HorizontalOptions="Center"
                VerticalOptions="EndAndExpand"   
                Clicked="Button_Clicked"
                Margin="40"/>
    </StackLayout>
</ContentPage>